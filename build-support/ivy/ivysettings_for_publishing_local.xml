<?xml version="1.0"?>

<ivysettings>
  <property name="m2.repo.dir" value="${user.home}/.m2/repository" override="true"/>
  <property name="m2.repo.relpath" value="[organization]/[module]/[revision]"/>

  <resolvers>
    <filesystem name="local.ivy" m2compatible="true" local="true" overwrite="true">
      <ivy pattern="${m2.repo.dir}/${m2.repo.relpath}/[module]-[revision].pom"/>
      <artifact pattern="${m2.repo.dir}/${m2.repo.relpath}/[artifact]-[revision](-[classifier]).[ext]"/>
    </filesystem>
  </resolvers>

</ivysettings>

